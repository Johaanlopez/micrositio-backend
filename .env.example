# Example environment variables for the backend
# Copy this file to `.env` and fill real values. Do NOT commit real secrets to git.

# Postgres connection (example):
# postgres://user:password@host:port/database
DATABASE_URL=postgres://dbuser:dbpass@localhost:5432/micrositio

# Individual Postgres connection variables (do NOT use real credentials here)
DB_USER=your_db_user
DB_PASS=your_db_pass
DB_HOST=localhost
DB_PORT=5432
DB_NAME=micrositio

# JWT secret used for HMAC (HMAC-SHA256). Use a 256-bit (32 byte) random value.
# You can generate one using the docs/GENERATE_SECRETS.md commands.
JWT_SECRET=replace-with-256-bit-hex-or-base64
JWT_EXPIRES_IN=15m

# SMTP (for sending verification emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_pass

# WordPress integration
WORDPRESS_API_URL=https://your-wordpress.example.com
WORDPRESS_API_TOKEN=your_wp_api_token

# CORS origin for frontend (allow only your frontend origin in production)
CORS_ORIGIN=http://localhost:5173

# Node env & server port
NODE_ENV=development
PORT=5001

# Optional: enable verbose logs
LOG_LEVEL=info

# Alerting (email) - send notifications when threshold of failed logins is exceeded
# ALERT_EMAIL_FROM must be a valid from-address for your SMTP server
ALERT_EMAIL_FROM=alerts@example.com
ALERT_EMAIL_TO=ops@example.com
ALERT_FAILED_LOGINS_THRESHOLD=10
ALERT_FAILED_LOGINS_WINDOW_MIN=60
# Backend
PORT=5001
NODE_ENV=development
# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173
# WordPress
WP_BASE_URL=https://mi-wordpress.example.com/wp-json
WP_AUTH_TYPE=none
WP_BASIC_USER=
WP_BASIC_PASS=
WP_JWT_TOKEN=
